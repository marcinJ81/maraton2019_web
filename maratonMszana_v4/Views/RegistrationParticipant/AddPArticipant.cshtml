@model Abstract_And_Model_Layer.Registration_Participant_Model.kartoteka2
@{
    ViewBag.Title = "AddPArticipant";
    Layout = "~/Views/_layoutPageMenu.cshtml";
}

<style>
    .odstep {
        padding: 5px 5px 5px 5px;
    }

    .rozmiar {
        font-size: 16px;
    }
</style>
<h3>Dodanie nowego zawodnika</h3>
<div class="container">
    <span class="rozmiar">
        Minimalna ilość danych do podania, czyli imię, nazwisko, email oraz dystans.
        Automatyczna opłata, nadanie numeru, i dodanie do listy startowej.
        Dstans nie może być pusty!!!.
    </span>
</div>
<div class="container">
    <div class="jumbotron">
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-md-1">
                    @Html.ActionLink("Powrót", "ListOfRegistering", "RegistrationParticipant", null, new { @class = "btn btn-success" })
                </div>
                <div class="col-md-1">

                </div>
                <div class="col-md-1">
                    <input id="btnVerificationRegister" type="submit" value="Dodaj" class="btn btn-info" />
                </div>
            </div>
            <div class="row odstep">
                <div class="col-md-2">
                    Imię
                </div>
                <div class="col-md-3">
                    @Html.TextBox("kart_imie", null, htmlAttributes: new { placeholder = "Podaj imię", @class = "form-control pole_1" })
                </div>
                <div class="col-md-4">
                   
                </div>
            </div>
            <div class="row odstep">
                <div class="col-md-2">
                    Nazwisko
                </div>
                <div class="col-md-3">
                    @Html.TextBox("kart_nazwisko", null, htmlAttributes: new { placeholder = "Podaj nazwisko", @class = "form-control pole_1" })
                </div>
                <div class="col-md-4">
                   
                </div>
            </div>
            <div class="row odstep">
                <div class="col-md-2">
                    Email
                </div>
                <div class="col-md-3">
                    @Html.TextBox("kart_email", null, htmlAttributes: new { placeholder = "Podaj email", @class = "form-control pole_1" })
                </div>
                <div class="col-md-4">
                 
                </div>
            </div>
            <div class="row odstep">

                <div class="col-md-2">
                    Dystans
                </div>
                <div class="col-md-3">

                        @Html.DropDownList("dys_id", (MultiSelectList)ViewBag.dystans, htmlAttributes: new { @class = " form-control " })

                </div>
                <div class="col-md-4">
                   
                </div>
            </div>
        }
    </div>
</div>

